generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        Int       @id @default(autoincrement())
  nome      String
  descricao String?
  criadoEm  DateTime  @default(now())
  produtos  Produto[]
}

model Produto {
  id          Int        @id @default(autoincrement())
  nome        String
  preco       Decimal    @db.Decimal(10, 2)
  categoriaId Int
  disponivel  Boolean    @default(true)
  criadoEm    DateTime   @default(now())
  promocoes   Promocao[] @relation("ProdutoPromocao")
  categoria   Categoria  @relation(fields: [categoriaId], references: [id])
}

model Promocao {
  id        Int               @id @default(autoincrement())
  descricao String?
  desconto  Float
  produtoId Int
  criadoEm  DateTime          @default(now())
  produto   Produto           @relation("ProdutoPromocao", fields: [produtoId], references: [id], onDelete: Cascade)
  horarios  HorarioPromocao[] @relation("PromocaoHorarios")
}

model HorarioPromocao {
  id         Int       @id @default(autoincrement())
  diaSemana  DiaSemana
  horaInicio String
  horaFim    String
  promocaoId Int
  promocao   Promocao  @relation("PromocaoHorarios", fields: [promocaoId], references: [id], onDelete: Cascade)

  @@unique([promocaoId, diaSemana, horaInicio, horaFim])
}

enum DiaSemana {
  DOMINGO
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
}
